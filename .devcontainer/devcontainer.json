{
  "name": "asigna-env",
  "image": "mcr.microsoft.com/devcontainers/miniconda:0-3",

  "postCreateCommand": "conda env update -f environment.yml && conda clean -a -y",

  "customizations": {
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": "/opt/conda/envs/asigna/bin/python"
      },
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter"
      ]
    }
  }
}
